<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">Welcome</h1>
  <p class="lead">Become a member here!</p>
</div>

<div class="container">
  <div class="card-deck mb-3 text-center">
    <div class="card mb-4 box-shadow">
      <div class="card-header">
        <h4 class="my-0 font-weight-normal">Free</h4>
      </div>
      <div class="card-body">
        <h1 class="card-title pricing-card-title">$0 <small class="text-muted">/ mo</small></h1>
        <ul class="list-unstyled mt-3 mb-4">
          <li>You are a member</li>
          <li>Email support</li>
          <li>Help center access</li>
        </ul>
        <%= link_to 'Sign up for free', new_user_registration_path(plan: @basic_plan.id), class:'btn btn-lg btn-outline-primary' %>
      </div>
    </div>
    <div class="card mb-4 box-shadow">
      <div class="card-header">
        <h4 class="my-0 font-weight-normal">Pro</h4>
      </div>
      <div class="card-body">
        <h1 class="card-title pricing-card-title">$10 <small class="text-muted">/ mo</small></h1>
        <ul class="list-unstyled mt-3 mb-4">
          <li>You are a PRO member</li>
          <li>Priority email support</li>
          <li>Help center access</li>
        </ul>
        <%= link_to 'Get started', new_user_registration_path(plan: @pro_plan.id), class:'btn btn-lg btn-primary' %>
      </div>
    </div>
  </div>
