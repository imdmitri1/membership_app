<div class="row">
  <div class="col-md-6 offset-3">

    <div class="text-center">
      <% if params[:plan] == '2' %>
        <h1>Pro Account</h1>
      <% else %>
        <h1>Basic Account</h1>
      <% end %>
    </div>


    <h2 class="text-center">Sign up</h2>

      <% if params[:plan] == '2' %>
        <%= render "pro_form" %>
      <% else %>
        <%= render "basic_form" %>
      <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
